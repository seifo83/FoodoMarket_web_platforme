{% if pageCount > 1 %}
    <nav class="pagination is-centered" role="navigation" aria-label="pagination">
        <ul class="pagination-list">

            {% if previous is defined %}
                <li>
                    <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}" class="pagination-previous has-text-black">&laquo;</a>
                </li>
            {% else %}
                <li class="disabled">
                    <span class="pagination-previous has-text-black">&laquo;</span>
                </li>
            {% endif %}

            <li>
                {% if current == first %}
                    <a class="pagination-link is-current" aria-label="Page {{ current }}" aria-current="page" href="{{ path(route, query|merge({(pageParameterName): first})) }}">1</a>
                {% else %}
                    <a class="pagination-link has-text-black" href="{{ path(route, query|merge({(pageParameterName): first})) }}">1</a>
                {% endif %}
            </li>

            {% if pagesInRange[0] - first >= 2 %}
                <li>
                    <span class="pagination-ellipsis">&hellip;</span>
                </li>
            {% endif %}

            {% for page in pagesInRange %}
                {% if first != page and page != last %}
                    <li>
                        {% if page == current %}
                            <a class="pagination-link is-current" aria-label="Page {{ current }}" aria-current="page" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                        {% else %}
                            <a class="pagination-link has-text-black" aria-label="Goto page {{ page }}" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                        {% endif %}
                    </li>
                {% endif %}
            {% endfor %}

            {% if last - pagesInRange[pagesInRange|length - 1] >= 2 %}
                <li>
                    <span class="pagination-ellipsis">&hellip;</span>
                </li>
            {% endif %}

            <li>
                {% if current == last %}
                    <a class="pagination-link is-current" aria-label="Page {{ current }}" aria-current="page" href="{{ path(route, query|merge({(pageParameterName): last})) }}">{{ last }}</a>
                {% else %}
                    <a class="pagination-link has-text-black" href="{{ path(route, query|merge({(pageParameterName): last})) }}">{{ last }}</a>
                {% endif %}
            </li>


            {% if next is defined %}
                <li>
                    <a href="{{ path(route, query|merge({(pageParameterName): next})) }}" class="pagination-next has-text-black">&raquo;</a>
                </li>
            {% else %}
                <li class="disabled">
                    <span class="pagination-next has-text-black">&raquo;</span>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}
