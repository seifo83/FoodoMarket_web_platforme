{% extends 'base.html.twig' %}

{% block title %}Nouveau Produit{% endblock %}

{% block body %}
    <div class="container mt-4 pt-6 pb-6">
        <div class="columns is-centered">
            <div class="column is-half">
                <h1 class="title has-text-black has-text-centered">Créer un nouveau produit</h1>
                {{ form_start(form) }}
                <div class="field">
                    <label class="label has-text-black">Description</label>
                    <div class="control">
                        {{ form_widget(form.description, {'attr': {'class': 'input', 'placeholder': 'Description du produit'}}) }}
                    </div>
                </div>
                <div class="field has-text-black">
                    <label class="label has-text-black">Code</label>
                    <div class="control">
                        {{ form_widget(form.code, {'attr': {'class': 'input', 'placeholder': 'Code du produit'}}) }}
                    </div>
                </div>
                <div class="field">
                    <label class="label has-text-black">Fournisseur</label>
                    <div class="control">
                        {{ form_widget(form.suppliers, {'attr': {'class': 'select'}}) }}
                    </div>
                </div>
                <div class="field">
                    <label class="label has-text-black">Prix</label>
                    <div class="control">
                        {{ form_widget(form.price, {'attr': {'class': 'input', 'placeholder': 'Prix du produit'}}) }}
                    </div>
                </div>

                <div class="field">
                    <div class="control">
                        <button type="submit" class="button is-primary">Ajouter</button>
                    </div>
                </div>
                {{ form_end(form) }}

                <div class="buttons is-centered mt-6 mb-6">
                    <a href="{{ path('app_products') }}" class="button is-link">Retour à la liste</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
