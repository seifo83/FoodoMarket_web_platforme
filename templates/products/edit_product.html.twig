{% extends 'base.html.twig' %}

{% block title %}Modifier le produit{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="columns is-centered">
            <div class="column is-half mt-4">
                <h1 class="title has-text-centered has-text-black">Modifier le produit</h1>
                {{ form_start(form) }}
                <div class="field">
                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'label has-text-black'}}) }}
                    <div class="control">
                        {{ form_widget(form.description, {'attr': {'class': 'input'}}) }}
                    </div>
                </div>
                <div class="field">
                    {{ form_label(form.code, 'Code', {'label_attr': {'class': 'label has-text-black'}}) }}
                    <div class="control">
                        {{ form_widget(form.code, {'attr': {'class': 'input'}}) }}
                    </div>
                </div>
                <div class="field">
                    {{ form_label(form.suppliers, 'Fournisseur', {'label_attr': {'class': 'label has-text-black'}}) }}
                    <div class="control">
                        {{ form_widget(form.suppliers, {'attr': {'class': 'select'}}) }}
                    </div>
                </div>
                <div class="field">
                    {{ form_label(form.price, 'Prix', {'label_attr': {'class': 'label has-text-black'}}) }}
                    <div class="control">
                        {{ form_widget(form.price, {'attr': {'class': 'input'}}) }}
                    </div>
                </div>
                <div class="field">
                    <div class="control">
                        <button type="submit" class="button is-primary">Enregistrer</button>
                    </div>
                </div>
                {{ form_end(form) }}

                <div class="buttons is-centered mt-6 pb-6">
                    <a href="{{ path('app_products') }}" class="button is-link">Retour Ã  la liste</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
